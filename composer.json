{
    "name":         "pedrotroller/in-memory-adapter",
    "type":         "library",
    "description":  "PHP5 library that provides a filesystem abstraction layer",
    "keywords":     ["file", "filesystem", "media", "abstraction", "memory"],
    "homepage":     "http://knplabs.com",
    "license":      "MIT",
    "authors": [
        {
            "name": "KnpLabs Team",
            "homepage": "http://knplabs.com"
        },
        {
            "name":     "The contributors",
            "homepage": "http://github.com/Gaufrette/core/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "pedrotroller/core": "~1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "gaufrette/test-suite": "~1.0"
    },
    "autoload": {
        "psr-0": { "Gaufrette\\Adapter": "src/" }
    },
    "autoload-dev": {
        "psr-0": { "Gaufrette\\Test": "test/" }
    },
    "config": {
        "bin-dir": "bin"
    }
}
